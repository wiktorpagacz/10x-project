---
import "../styles/global.css";
import { LogoutButton } from "@/components/auth";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;

// Get user session from middleware
const session = Astro.locals.session;
const user = session?.user;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    {
      user && (
        <header class="fixed top-0 right-0 left-0 z-50 bg-background border-b border-border">
          <div class="container mx-auto px-4 py-3 flex justify-between items-center">
            <div class="flex items-center gap-4">
              <h1 class="text-lg font-semibold">10x Astro Starter</h1>
            </div>
            <div class="flex items-center gap-4">
              <span class="text-sm text-muted-foreground">{user.email}</span>
              <LogoutButton client:load />
            </div>
          </div>
        </header>
      )
    }
    <main class={user ? "pt-16" : ""}>
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  main {
    min-height: 100vh;
  }
</style>
